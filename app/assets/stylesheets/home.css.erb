html, body {
	width: 100%;
}

body {
    padding-bottom: 50px;
}
#main-content {
	height: 100%;
}

section {
    padding-top: 51px;
    margin-top: 30px;
}

section > div.container > h1 {
	margin-top: 0;
}

/* HEADER */
#main-menu {
	margin-bottom: 0;
	background-color: white;
}

#cover {
	position: relative;
    color: white;
    padding: 0;
    text-shadow: black 0.3em 0.3em 0.3em;
    z-index: -1;
    background-image: url(<%= asset_path 'cover3.jpg' %>);
    background-size: cover;
    background-repeat: no-repeat;
    max-height: 600px;
    margin-top: 51px;
}

#cover img {
	visibility: hidden;
	width: 100%;
	z-index: -1;
}

#cover #legend {
	z-index: 1;
	position: absolute;
	top: 0;
	left: 0;
	margin-top: 48px;
	margin-left: 30px;
}

/* FEATURES */
#features .icons {
	font-size: 4em;
	letter-spacing: -4px;
}

#features .icons .fa-tablet {
	font-size: 0.8em;
}

#features .icons .fa-mobile {
	font-size: 0.6em;
}