<% content_for :css_includes do %>
  <%= stylesheet_link_tag "pages", media: "all" %>
  <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<% end %>

<header id="main-menu" class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to("Streamr", root_path, id: "logo", class: "navbar-brand") %>
    </div>
  </div>
</header>

<div id='clearance' class='sign-up container'>
  <h2><%= t('.title') %></h2>

  <%= form_for @user do |form| %>
    <%= render :partial => '/users/form', :object => form %>

    <div class='form-group'>
      <%= form.submit nil, class: 'btn btn-default' %>
    </div>

    <div class='other-links'>
      <%= link_to t('.sign_in'), sign_in_path %>
    </div>
  <% end %>
</div>
