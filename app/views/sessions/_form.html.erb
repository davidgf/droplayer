<%= form_for :session, :url => session_path, html: {class: "form-horizontal"} do |form| %>
  <div class='form-group'>
    <%= form.label :email, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :email, :type => 'email', class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.label :password, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>

  <div class='form-group'>
    <%= form.submit nil, class: 'btn btn-default' %>
  </div>

  <div class='other-links'>
    <%= link_to t('.sign_up'), sign_up_path %> |
    <%= link_to t('.forgot_password'), new_password_path %>
  </div>
<% end %>
