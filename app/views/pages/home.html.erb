<% content_for :javascript_includes do %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "bootstrap" %>
<% end %>

<% content_for :css_includes do %>
  <%= stylesheet_link_tag "bootstrap", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "home", media: "all", "data-turbolinks-track" => true %>
<% end %>
<header id="main-menu" class="navbar navbar-default navbar-static-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Droplayer</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="#">Features</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contribute</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Sign in<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li>
              <%= form_for :session, :url => session_path, html: { class: "navbar-form navbar-left", role: "form"} do |form| %>
                <div class='form-group'>
                  <%= form.text_field :email, :type => 'email', class: "form-control", placeholder: "Email" %>
                </div>

                <div class='form-group'>
                  <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
                </div>

                <%= form.submit class: "btn btn-default" %>

                <div class='other-links'>
                  <%= link_to t('.sign_up'), sign_up_path %>
                  <%= link_to t('.forgot_password'), new_password_path %>
                </div>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div>
</header>
<div id="cover" class="jumbotron">
  <%= image_tag("cover3.jpg") %>
  <div id="legend">
    <h1>Droplayer</h1>
    <p>Your music, anywhere</p>
  </div>
</div>
