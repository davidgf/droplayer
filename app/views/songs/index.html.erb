<% content_for :javascript_includes do %>
<script src="/assets/lib/quo.js"></script>
<script src="/assets/lib/lungo.js"></script>
<script data-main="/assets/config" src="/assets/lib/require.js"></script>
<% end %>

<% content_for :css_includes do %>
<link href="/assets/lungo/lungo.css" rel="stylesheet" />
<link rel="stylesheet" href="/assets/lungo/lungo.icon.brand.css" />
<link rel="stylesheet" href="/assets/lungo/lungo.icon.css" />
<link rel="stylesheet" href="/assets/lungo/theme.lungo.css" />
<% end %>

<section id="main" data-transition="slide">
    <header data-title="My Music">
        <nav>
            <a id="mybtn" href="javascript:void(0)" data-icon="refresh" class="right"></a>
        </nav>
    </header>
    <nav class="groupbar">
        <a href="#main-article" data-router="article" class="active">
            Library
        </a>
        <a href="#playlist-article" data-router="article">
            Playlist
        </a>
    </nav>
    <article id="main-article" class="indented active">
        <div class="lists scroll">
            <div id="first-article" class="list scroll">
                <%= session[:dropbox_session] %><br>
                <%= @sess.inspect %>
                <%= @user %>
                <ul id="songslist"></ul>
            </div>
        </div>
    </article>
    <article id="playlist-article" class="indented">
        <div class="lists scroll">
            <div id="first-article" class="list scroll">
                <ul id="playlist"></ul>
            </div>
        </div>
        <div id="controls" class="text align_center">
            <audio autoplay="autoplay" id="myaudio" ></audio>
            <div class="skip_song prev">
                <div class="triangle" ></div>
            </div>
            <div class="container_button" >
                <div class="hole" >
                    <div class="play_button" >
                        <div class="triangle" ></div>
                        <div class="lighter_triangle" ></div>
                        <div class="darker_triangle" ></div>
                    </div>
                </div>
            </div>
            <div class="skip_song next">
                <div class="triangle" ></div>
            </div>
        </div>
    </article>
</section>

<script type="text/template" id="songslisttpl">
    {{ _.each(songs, function(song){ }}
        <li>
            <strong>{{= song.path }}</strong>
        </li>
    {{ }); }}
</script>
